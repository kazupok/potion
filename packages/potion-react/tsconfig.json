{
    "compilerOptions": {
        "target": "ES2019",
        "module": "NodeNext",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "moduleResolution": "nodenext",
    },
    "include": [
        "src/**/*.ts"
    ]
}