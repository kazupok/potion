{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "moduleResolution": "nodenext",
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}