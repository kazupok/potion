{
  "name": "potion-react",
  "version": "0.0.29",
  "main": "./dist",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "dist/package.json",
    "src/styles/**"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./styles": {
      "types": "./src/styles/styles.d.ts",
      "default": "./src/styles/styles.css"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "npm run build -- --watch",
    "publish-packages": "npm run build && changeset version && changeset publish"
  },
  "dependencies": {
    "katex": "^0.16.19",
    "mermaid": "^11.4.1",
    "potion-core": "0.0.49",
    "prismjs": "^1.29.0",
    "react": "^19.0.0",
    "typescript": "latest"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "@types/prismjs": "^1.26.5",
    "@types/react": "18.3.1"
  }
}
